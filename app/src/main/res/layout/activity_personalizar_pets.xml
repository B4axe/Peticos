<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fotogenerica"
    tools:context=".PersonalizarPets">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="74dp"
            android:background="@color/is_it_green_light_version"
            android:backgroundTint="#BF2D8580"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imageButton"
                android:layout_width="30dp"
                android:layout_height="37dp"
                android:layout_weight="1"
                android:background="#00FFFFFF"
                android:src="@drawable/baseline_arrow_left_24" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="160dp"
                android:layout_weight="1"
                android:fontFamily="@font/lilita_one"
                android:text="Personalizar Pet"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/gato_feliz" />
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="327dp">

            <ImageView
                android:id="@+id/petzao"
                android:layout_width="240dp"
                android:layout_height="270dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/dog_personalizado_1" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="16dp"
           >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/btn_escolher_catordog"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_personalizar_pet_1_1" />

                <ImageView
                    android:id="@+id/btn_color"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_personalizar_pet_2_1" />

                <ImageView
                    android:id="@+id/btn_acessorio_cabeca"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_personalizar_pet_3_1" />

                <ImageView
                    android:id="@+id/btn_coleira"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_personalizar_pet_4_1" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/beige"
            android:backgroundTint="@color/beige">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/escolher_catordog"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <androidx.cardview.widget.CardView
                                android:layout_width="120dp"
                                android:layout_height="140dp"
                                android:layout_margin="15dp"


                                app:cardCornerRadius="16dp">

                                <ImageView
                                    android:id="@+id/dog_escolha"
                                    android:layout_width="100dp"
                                    android:layout_height="120dp"
                                    android:layout_gravity="center"
                                    app:srcCompat="@drawable/dog_personalizado_1" />
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="120dp"
                                android:layout_height="140dp"
                                android:layout_margin="15dp"


                                app:cardCornerRadius="16dp">

                                <ImageView
                                    android:id="@+id/cat_escolha"
                                    android:layout_width="100dp"
                                    android:layout_height="120dp"
                                    android:layout_gravity="center"
                                    app:srcCompat="@drawable/cat_personalizado_1" />
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/cachorros_cores"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/dogs_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center|top"
                            android:orientation="horizontal">

                            <androidx.cardview.widget.CardView
                                android:layout_width="100dp"
                                android:layout_height="120dp"
                                android:layout_margin="15dp"


                                app:cardCornerRadius="16dp">

                                <ImageView
                                    android:id="@+id/dog_7"
                                    android:layout_width="80dp"
                                    android:layout_height="90dp"
                                    android:layout_gravity="center"
                                    app:srcCompat="@drawable/dog_personalizado_7" />
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="100dp"
                                android:layout_height="120dp"
                                android:layout_margin="15dp"


                                app:cardCornerRadius="16dp">

                                <ImageView
                                    android:id="@+id/dog_8"
                                    android:layout_width="80dp"
                                    android:layout_height="90dp"
                                    android:layout_gravity="center"
                                    app:srcCompat="@drawable/dog_personalizado_8" />
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="100dp"
                                android:layout_height="120dp"
                                android:layout_margin="15dp"


                                app:cardCornerRadius="16dp">

                                <ImageView
                                    android:id="@+id/dog_9"
                                    android:layout_width="80dp"
                                    android:layout_height="90dp"
                                    android:layout_gravity="center"
                                    app:srcCompat="@drawable/dog_personalizado_9" />
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/dogs_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center|top"
                            android:orientation="horizontal">

                            <androidx.cardview.widget.CardView
                                android:layout_width="100dp"
                                android:layout_height="120dp"
                                android:layout_margin="15dp"


                                app:cardCornerRadius="16dp">

                                <ImageView
                                    android:id="@+id/dog_1"
                                    android:layout_width="80dp"
                                    android:layout_height="90dp"
                                    android:layout_gravity="center"
                                    app:srcCompat="@drawable/dog_personalizado_1" />
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="100dp"
                                android:layout_height="120dp"
                                android:layout_margin="15dp"


                                app:cardCornerRadius="16dp">

                                <ImageView
                                    android:id="@+id/dog_2"
                                    android:layout_width="80dp"
                                    android:layout_height="90dp"
                                    android:layout_gravity="center"
                                    app:srcCompat="@drawable/dog_personalizado_2" />
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="100dp"
                                android:layout_height="120dp"
                                android:layout_margin="15dp"


                                app:cardCornerRadius="16dp">

                                <ImageView
                                    android:id="@+id/dog_3"
                                    android:layout_width="80dp"
                                    android:layout_height="90dp"
                                    android:layout_gravity="center"
                                    app:srcCompat="@drawable/dog_personalizado_3" />
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/dogs_1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center|top"
                            android:orientation="horizontal">

                            <androidx.cardview.widget.CardView
                                android:layout_width="100dp"
                                android:layout_height="120dp"
                                android:layout_margin="15dp"


                                app:cardCornerRadius="16dp">

                                <ImageView
                                    android:id="@+id/dog_4"
                                    android:layout_width="80dp"
                                    android:layout_height="90dp"
                                    android:layout_gravity="center"
                                    app:srcCompat="@drawable/dog_personalizado_4" />
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="100dp"
                                android:layout_height="120dp"
                                android:layout_margin="15dp"


                                app:cardCornerRadius="16dp">

                                <ImageView
                                    android:id="@+id/dog_5"
                                    android:layout_width="80dp"
                                    android:layout_height="90dp"
                                    android:layout_gravity="center"
                                    app:srcCompat="@drawable/dog_personalizado_5" />
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:layout_width="100dp"
                                android:layout_height="120dp"
                                android:layout_margin="15dp"


                                app:cardCornerRadius="16dp">

                                <ImageView
                                    android:id="@+id/dog_6"
                                    android:layout_width="80dp"
                                    android:layout_height="90dp"
                                    android:layout_gravity="center"
                                    app:srcCompat="@drawable/dog_personalizado_6" />
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </ScrollView>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</FrameLayout>